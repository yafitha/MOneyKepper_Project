<local:ContentDialogBase
    x:Class="MoneyKepper2.View.Dialogs.AddTransactionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyKepper2.View.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource StartUpContentDialog}"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"  
    xmlns:behavior ="using:MoneyKepper2.Behaviors"
    xmlns:Input="using:Syncfusion.UI.Xaml.Controls.Input"
    mc:Ignorable="d"
    FlowDirection="RightToLeft"
    DataContext="{Binding AddTransactionViewModel, Source={StaticResource Locator}}">

    <Grid Width="500" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid
            BorderBrush="Black"
            Height="35"
            Margin="0,0,0,5"
            BorderThickness="0,0,0,1"
            Background="{Binding TransactionType ,Converter={StaticResource TransactionTypeToColorConverter}}">
            <TextBlock
                Foreground="White"
                Margin="5,0"
                FontWeight="SemiBold"
                VerticalAlignment="Center"
                Text="{Binding TransactionType, Converter={StaticResource TransactionTypeToStringConverter}}"/>
            <Button
                Background="{x:Null}"
                HorizontalAlignment="Right"
                Command="{Binding CloseCommand}">
                <TextBlock
                  Text="&#xe10a;"
                  Style="{StaticResource SegoUiIconTextBlockStyle}"/>
            </Button>
                
        </Grid>
        <StackPanel
            Padding="15,0"
              Margin="0,8"
            Grid.Row="1">
            <StackPanel 
                Orientation="Horizontal">
                <TextBlock
                    Width="80"
                    Text="קטגוריה"/>
                <ComboBox
                    Width="200"
                    Margin="0,0,0,12"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                    ItemsSource="{Binding Categories}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock 
                               Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Width="80"
                    Text="תאריך:"/>
                <CalendarDatePicker
                    Margin="0,0,0,8"
                    Width="200">
                    <interactivity:Interaction.Behaviors>
                        <behavior:SetDateToDatePickerBehavior
                         Date="{Binding CurrentMonth ,Mode=TwoWay}"/>
                        <behavior:SetMinAndMaxDateBehavior
                            EndTime="{Binding EndDate.DateTime}"
                            StartTime="{Binding StartDate.DateTime}"/>
                    </interactivity:Interaction.Behaviors>
                </CalendarDatePicker>

            </StackPanel>
            <StackPanel 
                Margin="0,0,0,12"
                Orientation="Horizontal">
                <TextBlock
                   Width="80"
                   Text="סכום"/>
                <Input:SfNumericTextBox
                   Width="200"
                    Text="{Binding Amount, Mode=TwoWay}"
                    InputScope="Number"/>
            </StackPanel>
            <StackPanel 
                Margin="0,0,0,12"
                Orientation="Horizontal">
               <TextBlock
                    Width="80"
                   VerticalAlignment="Center"
                   Text="הערה"/>
                <TextBox
                   Width="200"
                    Height="50"
                    TextWrapping="Wrap"
                    Text="{Binding Note, Mode=TwoWay}"
                    InputScope="Text"/>
            </StackPanel>
            <TextBlock
                Foreground="Red"
                Text="{Binding ValidationMessage}"/>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,8"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
        <Button
            Content="שמור"
            Margin="0,0,12,0"
            Width="90"
             Command="{Binding SaveCommand}"/>
        <Button
            Content="ביטול"
            Width="90"
            Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</local:ContentDialogBase>

