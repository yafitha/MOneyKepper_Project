<local:ContentDialogBase
    x:Class="MoneyKepper2.View.Dialogs.AddNewCategoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyKepper2.View.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
    Style="{StaticResource StartUpContentDialog}"
    Width="700"
    Height="700"
    FlowDirection="RightToLeft"
    DataContext="{Binding AddNewCategoryViewModel, Source={StaticResource Locator}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Border
                Margin="0,12,150,8"
                Width="80"
                Height="80"
                HorizontalAlignment="Right"
                BorderBrush="Gray"
                BorderThickness="2">
                <Image
                 Width="60"
                 Height="60"
                 Source="{Binding SelectedImage.Path,Converter={StaticResource PictureNameToPictureSourceConverter}}"/>
            </Border>
            <StackPanel
                Padding="13,0" 
                 HorizontalAlignment="Stretch">
                <TextBlock
                    FontSize="22"
                    FontWeight="Bold"
                    Margin="6,9,0,30"
                    Text="{Binding Title}"/>
                <StackPanel 
                   
                   Orientation="Horizontal">
                    <TextBlock
                    Width="130"
                    Text="שם קטגוריה"/>
                 <TextBox
                    Height="30"
                    Width="200"
                    Text="{Binding Name ,Mode=TwoWay}"
                    Margin="5,0,0,0">
                    </TextBox>
                   
                </StackPanel>
                
                
                <StackPanel 
                    Margin="0,10,0,10"
                    Orientation="Horizontal">
                    <RadioButton
                        IsEnabled="{Binding IsAddCategory}"
                         IsChecked="{Binding IsIncome ,Mode=TwoWay}"
                        Command="{Binding CategoryTypeSelectionCommand}"
                        CommandParameter="1"
                        GroupName="Type"
                        Width="135" 
                        Content="הכנסות"/>
                    <RadioButton 
                        IsEnabled="{Binding IsAddCategory}"
                        IsChecked="{Binding IsIncome ,Converter={StaticResource InvertBooleanConverter } ,Mode=TwoWay}"
                        Command="{Binding CategoryTypeSelectionCommand}"
                        CommandParameter="2"
                        GroupName="Type"
                        Content="הוצאות"/>
                </StackPanel>
                <StackPanel 
                    Visibility="{Binding IsAddCategory ,Converter={StaticResource BooleanToVisibilityConverter}}"
                     Margin="0,10,0,10"
                     Orientation="Horizontal">

                    <CheckBox x:ConnectionId='2'
                    MinWidth="25"
                    x:Name="IsParentCheckBox"
                    IsChecked="{Binding IsSubCategoryChecked,Mode=TwoWay}"
                    Width="25">
                    </CheckBox>
                    <TextBlock
                       VerticalAlignment="Center"
                      Width="120"
                      Text="בחר כתת קטגוריה"/>
                    <StackPanel
                        VerticalAlignment="Center"
                        Visibility="{Binding ElementName=IsParentCheckBox ,Path=IsChecked ,Converter={StaticResource BooleanToVisibilityConverter}}"
                        Orientation="Horizontal">
                          <TextBlock
                            Margin="7,0"
                            VerticalAlignment="Center"
                            Text="של"/>
                        <ComboBox
                            VerticalAlignment="Center"
                            Width="200"
                            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                            ItemsSource="{Binding Categories}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock 
                               Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
               
            </StackPanel>
           
        </Grid>
        <ListView x:ConnectionId='1'  
            x:Name="ImagesListView"
            Grid.Row="1"
            Width="600"
            Height="300"
            Margin="25,25"
            SelectedItem="{Binding SelectedImage,Mode=TwoWay}"
            IsItemClickEnabled="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"          
            ItemsSource="{Binding Images}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Image                             
                       Source="{Binding Path, Converter={StaticResource PictureNameToPictureSourceConverter}}"
                       Width="40"
                       Height="40"
                        HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid  
                        Orientation="Horizontal" 
                        ItemHeight="60" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <TextBlock
            Grid.Row="2"
            Margin="5,8"
            Foreground="Red"
            Text="{Binding ValidationMessage}"/>
        <StackPanel
            Grid.Row="3"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
         
            <Button
            Foreground="White"
            Background="{StaticResource AccentColorBrush}"
            Content="שמור"
            Margin="0,0,20,0"
            Width="90"
             Command="{Binding SaveCommand}"/>
          <Button
            Foreground="White"
            Background="{StaticResource AccentColorBrush}"
            Content="ביטול"
            Width="90"
            Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</local:ContentDialogBase>

