<local:ContentDialogBase
    x:Class="MoneyKepper2.View.Dialogs.AddNewCategoryDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyKepper2.View.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
    Style="{StaticResource StartUpContentDialog}"
    Width="700"
    Height="700"
    FlowDirection="RightToLeft"
    DataContext="{Binding AddNewCategoryViewModel, Source={StaticResource Locator}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel Padding="10,0" Width="400" HorizontalAlignment="Left">
                <TextBlock
                    FontSize="22"
                    FontWeight="Bold"
                    Margin="0,6,0,10"
                    Text="הוסף קטגוריה"/>
                <StackPanel 
                Orientation="Horizontal">
                    <TextBlock
                    Width="130"
                    Text="שם קטגוריה"/>
                   <TextBox
                    Width="200"
                    Text="{Binding Name ,Mode=TwoWay}"
                    Margin="5,0,0,8">
                    </TextBox>
                </StackPanel>
                <StackPanel 
                    Margin="0,10,0,10"
                    Orientation="Horizontal">
                    <RadioButton 
                        Command="{Binding CategoryTypeSelectionCommand}"
                        CommandParameter="1"
                        GroupName="Type"
                        Width="135" 
                        Content="הכנסות"/>
                    <RadioButton 
                        Command="{Binding CategoryTypeSelectionCommand}"
                        CommandParameter="2"
                        GroupName="Type"
                        Content="הוצאות"/>
                </StackPanel>
                <StackPanel 
                     Margin="0,10,0,10"
                     Orientation="Horizontal">
                 <TextBlock
                    Width="130"
                    Text="בחר כתת קטגוריה"/>
                  <CheckBox x:ConnectionId='2'
                    x:Name="IsParentCheckBox"
                    IsChecked="{Binding IsSubCategoryChecked}"
                    Width="130"
                    Margin="5,0,0,8">
                    </CheckBox>
                </StackPanel>
                <StackPanel
                    VerticalAlignment="Center"
                    Visibility="{Binding ElementName=IsParentCheckBox ,Path=IsChecked ,Converter={StaticResource BooleanToVisibilityConverter}}"
                   Orientation="Horizontal">
                  <TextBlock
                    Width="130"
                    Text="קטגורית אבא"/>
                  <ComboBox
                    Width="200"
                    Margin="6,0,0,8"
                    SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                    ItemsSource="{Binding Categories}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock 
                               Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <Border
               Width="80"
               Height="80"
               Margin="30,0"
               HorizontalAlignment="Right"
               BorderBrush="Gray"
               BorderThickness="2">
                <Image
                 Width="60"
                 Height="60"
                 Source="{Binding ElementName=ImagesListView ,Path=SelectedItem,Converter={StaticResource PictureNameToPictureSourceConverter}}"/>
            </Border>
        </Grid>
        <ListView x:ConnectionId='1'  
            x:Name="ImagesListView"
            Grid.Row="1"
            Width="600"
            Height="300"
            Margin="25,25"
            SelectedItem="{Binding SelectedImage,Mode=TwoWay}"
            IsItemClickEnabled="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"          
            ItemsSource="{Binding Images}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Image                             
                       Source="{Binding Converter={StaticResource PictureNameToPictureSourceConverter}}"
                       Width="40"
                       Height="40"
                        HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid  
                        Orientation="Horizontal" 
                        ItemHeight="60" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
            Content="שמור"
            Margin="0,0,20,0"
            Width="90"
             Command="{Binding SaveCommand}"/>
            <Button
            Content="ביטול"
            Width="90"
            Command="{Binding CloseCommand}"/>
        </StackPanel>
    </Grid>
</local:ContentDialogBase>

