<local:PageBase
    x:Class="MoneyKepper2.View.Pages.GraphsDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyKepper2.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    mc:Ignorable="d"
    d:DesignWidth="800"
    DataContext="{Binding GraphsDetailsViewModel, Source={StaticResource Locator}}">

    <Grid>
        <Charting:Chart
           Width="800"
            Height="600"
            Visibility="{Binding ShowPieGraph ,Converter={StaticResource BooleanToVisibilityConverter},ConverterParameter=Invert}"
            Padding="10,10">
            <Charting:ColumnSeries
                ItemsSource="{Binding CategoryItems}"
                Margin="0" 
                Title="התפלגות לפי קטגוריות"
                IndependentValuePath="CategoryName" 
                DependentValuePath="Amount" 
                IsSelectionEnabled="False">
            </Charting:ColumnSeries>
        </Charting:Chart>
        <ScrollViewer>
        <Charting:Chart
           Width="800"
            Height="600"
            Padding="10,10"
            Visibility="{Binding ShowPieGraph ,Converter={StaticResource BooleanToVisibilityConverter}}">
            <Charting:PieSeries  
                ItemsSource="{Binding CategoryItems}"
                Margin="0" 
                IndependentValuePath="CategoryName" 
                DependentValuePath="Amount" 
                IsSelectionEnabled="False"/>
        </Charting:Chart>
        </ScrollViewer>

    </Grid>
</local:PageBase>

