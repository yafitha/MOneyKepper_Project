            <chart:SfChart x:ConnectionId='1'
                Grid.Column="0"
                FontWeight="Bold"
                FontSize="20"
                Margin="10,20,10,0"
                Header="השוואה הכנסות"
                x:Name="Accumulation_charts2"
                AreaBorderThickness="0" >
            <chart:SfChart.Legend>
                    <chart:ChartLegend x:ConnectionId='4' 
                        x:Name="ChartLegend1" CornerRadius="0" FontSize="15" DockPosition="Top" BorderThickness="1">

                <!--<chart:ChartLegend.ItemsPanel>
                    <ItemsPanelTemplate>
                            <ItemsWrapGrid  Orientation="Horizontal"></ItemsWrapGrid>
                    </ItemsPanelTemplate>
                </chart:ChartLegend.ItemsPanel>-->
                </chart:ChartLegend>
            </chart:SfChart.Legend>

                <chart:PieSeries x:ConnectionId='5' 
                    Palette="Custom"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    EmptyPointValue="Zero"
                    x:Name="pieSeries2" 
                    ExplodeOnMouseClick="True"
                    ExplodeRadius="20"
                    EnableSmartLabels="True"
                    LabelPosition="OutsideExtended" 
                    ItemsSource="{Binding IncomeCategoryItems}" 
                    XBindingPath="CategoryName"
                    Label="CategoryName" 
                     YBindingPath="Amount" 
                     ShowTooltip="True"  >
                <chart:PieSeries.ColorModel>
                    <chart:ChartColorModel>
                        <chart:ChartColorModel.CustomBrushes>
                            <SolidColorBrush Color="Red"/>
                            <SolidColorBrush Color="HotPink"/>
                            <SolidColorBrush Color="Purple"/>
                            <SolidColorBrush Color="DarkBlue"/>
                            <SolidColorBrush Color="Cyan"/>
                            <SolidColorBrush Color="BlueViolet"/>
                        </chart:ChartColorModel.CustomBrushes>

                    </chart:ChartColorModel>

                </chart:PieSeries.ColorModel>
                <Interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <core:InvokeCommandAction Command="{Binding ShowTransactionCommand}"/>
                    </core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
                    
                    <chart:PieSeries.AdornmentsInfo>
                        <chart:ChartAdornmentInfo
                            ShowLabel="True"  
                            SegmentLabelFormat="#.#"
                            SegmentLabelContent="Percentage"
                            ShowConnectorLine="True" 
                            LabelPosition="Auto"
                            Foreground="Black"  >

                            <chart:ChartAdornmentInfo.LabelTemplate>
                                <DataTemplate >
                                    <Border CornerRadius="2" 
                                            BorderBrush="Black" 
                                            Height="22"
                                            Width="50"
                                            BorderThickness="1" 
                                            Background="LightGray"
                                            Margin="5,5">

                                        <TextBlock HorizontalAlignment="Center" 
                                                   FontSize="11" 
                                                   Foreground="Black" 
                                                   Text="{Binding}"/>

                                    </Border>
                                </DataTemplate>
                            </chart:ChartAdornmentInfo.LabelTemplate>
                        </chart:ChartAdornmentInfo>
                    </chart:PieSeries.AdornmentsInfo>
                </chart:PieSeries>
            </chart:SfChart>
      
        <TextBlock
            Foreground="Green"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Grid.Row="1"
            FontSize="22">
                <Run Text="סך ההכנסות:" />
                <Run Text="{Binding Income}"/>
        </TextBlock>
        <chart:SfChart
             FontWeight="Bold"
             FontSize="20"
             Grid.Column="1"
             Margin="10,20,10,0"
             Header="השוואה הוצאות"
             AreaBorderThickness="0" >

            <chart:SfChart.Legend>
                <chart:ChartLegend x:ConnectionId='2'
                    x:Name="ChartLegend2" CornerRadius="0" FontSize="15" DockPosition="Top" BorderThickness="1" >

                    <!--<chart:ChartLegend.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Width="80" Orientation="Horizontal"></ItemsWrapGrid>
                        </ItemsPanelTemplate>
                    </chart:ChartLegend.ItemsPanel>-->
                </chart:ChartLegend>
            </chart:SfChart.Legend>

            <chart:PieSeries x:ConnectionId='3' 
                x:Name="pies"
                  Palette="Custom"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    EmptyPointValue="Zero"
                    ExplodeOnMouseClick="True"
                    ExplodeRadius="20"
                    EnableSmartLabels="True"
                    LabelPosition="OutsideExtended" 
                    ItemsSource="{Binding ExpensesCategoryItems}" 
                    XBindingPath="CategoryName"
                    Label="CategoryName" 
                     YBindingPath="Amount" 
                     ShowTooltip="True"  >
                <chart:PieSeries.ColorModel>
                    <chart:ChartColorModel>
                        <chart:ChartColorModel.CustomBrushes>
                            <SolidColorBrush Color="Orange"/>
                            <SolidColorBrush Color="Green"/>
                            <SolidColorBrush Color="Aqua"/>
                            <SolidColorBrush Color="DarkCyan"/>
                            <SolidColorBrush Color="Chocolate"/>
                            <SolidColorBrush Color="DarkViolet"/>
                            <SolidColorBrush Color="LemonChiffon"/>
                            <SolidColorBrush Color="Plum"/>
                            <SolidColorBrush Color="Silver"/>
                            <SolidColorBrush Color="OldLace"/>
                        </chart:ChartColorModel.CustomBrushes>
                    </chart:ChartColorModel>
                </chart:PieSeries.ColorModel>

                <Interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <core:InvokeCommandAction Command="{Binding ShowTransactionCommand}"/>
                    </core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
                <chart:PieSeries.AdornmentsInfo>
                    <chart:ChartAdornmentInfo
                            ShowLabel="True"
                            SegmentLabelFormat="#.#"
                            SegmentLabelContent="Percentage"
                            ShowConnectorLine="True" 
                            LabelPosition="Auto"
                            Foreground="Black"  >

                        <chart:ChartAdornmentInfo.LabelTemplate>
                            <DataTemplate >
                                <Border CornerRadius="2" 
                                            BorderBrush="Black" 
                                            Height="22"
                                            Width="50"
                                            BorderThickness="1" 
                                            Background="LightGray"
                                            Margin="5,5">

                                    <TextBlock 
                                        Tag="{Binding ElementName=pies ,Path=DataContext}"
                                        HorizontalAlignment="Center" 
                                                   FontSize="11" 
                                                   Foreground="Black" 
                                                   Text="{Binding}"/>

                                </Border>
                            </DataTemplate>
                        </chart:ChartAdornmentInfo.LabelTemplate>
                    </chart:ChartAdornmentInfo>
                </chart:PieSeries.AdornmentsInfo>
            </chart:PieSeries>
        </chart:SfChart>
        <TextBlock
            Foreground="Red"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Grid.Column="1"
            Grid.Row="1"
            FontSize="22">
                <Run Text="סך ההוצאות:"/>
                <Run Text="{Binding Expenses}"/>
        </TextBlock>
        
            <ListView
                FontSize="22"
                FontWeight="Bold"
                Header="פירוט תנועות"
                Grid.Row="2" Grid.ColumnSpan="2"
                Margin="12,10"
                 Height="200"
                ItemTemplate="{StaticResource TranscationItemTemplate}"
                ItemContainerStyle="{StaticResource ListViewItemStyle1}"
                ItemsSource="{Binding Transactions}"/>
    </Grid>
</local:PageBase>

