            <chart:SfChart
                Margin="0,20,0,0"
              Header="השוואה חודשית"
                x:Name="Accumulation_charts"
                AreaBorderThickness="0" 
               FontSize="20" >

                <chart:SfChart.Legend>
                    <chart:ChartLegend x:Name="ChartLegend1" CornerRadius="0" FontSize="15" DockPosition="Top" BorderThickness="1" />
                </chart:SfChart.Legend>

                <chart:PieSeries 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    EmptyPointValue="Zero"
                    x:Name="pieSeries" 
                    ExplodeOnMouseClick="True"
                    ExplodeRadius="20"
                    EnableSmartLabels="True"
                    LabelPosition="Inside" 
                    ItemsSource="{Binding CategoryItems}" 
                    XBindingPath="CategoryName"
                    Label="CategoryName" 
                     YBindingPath="Amount" 
                     ShowTooltip="True"  >
                <Interactivity:Interaction.Behaviors>
                    <core:EventTriggerBehavior EventName="Tapped">
                        <core:InvokeCommandAction Command="{Binding ShowTransactionCommand}"/>
                    </core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
                    
                    <chart:PieSeries.AdornmentsInfo>
                        <chart:ChartAdornmentInfo
                            ShowLabel="True"  
                            SegmentLabelFormat="#.#"
                            SegmentLabelContent="Percentage"
                            ShowConnectorLine="True" 
                            LabelPosition="Auto"
                            Foreground="Black"  >

                            <chart:ChartAdornmentInfo.LabelTemplate>
                                <DataTemplate >
                                    <Border CornerRadius="2" 
                                            BorderBrush="Black" 
                                            Height="22"
                                            Width="50"
                                            BorderThickness="1" 
                                            Background="LightGray"
                                            Margin="5,5">

                                        <TextBlock HorizontalAlignment="Center" 
                                                   FontSize="11" 
                                                   Foreground="Black" 
                                                   Text="{Binding}"/>

                                    </Border>
                                </DataTemplate>
                            </chart:ChartAdornmentInfo.LabelTemplate>
                        </chart:ChartAdornmentInfo>
                    </chart:PieSeries.AdornmentsInfo>
                </chart:PieSeries>
            </chart:SfChart>
       
        <StackPanel Margin="12,0" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock FontSize="22">
                <Run Text="סך ההכנסות:" Foreground="Green"/>
                <Run Text="{Binding Income}"/>
            </TextBlock>
            <TextBlock FontSize="22">
                <Run Text="סך ההוצאות:" Foreground="Red"/>
                <Run Text="{Binding Expenses}"/>
            </TextBlock>
            <ListView
                Margin="8,10,0,0"
                 Height="200"
                ItemTemplate="{StaticResource TranscationItemTemplate}"
                ItemContainerStyle="{StaticResource ListViewItemStyle1}"
                ItemsSource="{Binding Transactions}"/>
        </StackPanel>
    </Grid>
</local:PageBase>
